        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
   // Check if the form is loading or if the new value is empty
   if (isLoading || newValue == '') {
      return;
   }
	// Get the 'Requested for' user's location
    var userGR = new GlideRecord('sys_user');
    userGR.get(newValue);  // 'newValue' contains the sys_id of the 'Requested for' user

    // Check if the user has a location defined
    if (userGR.location) {
        // Set the 'Office location' field to the user's location
        g_form.setValue('office_location', userGR.location.toString());
    } else {
        // If no location is found, clear the 'Office location' field
        g_form.clearValue('office_location');
    }
}]]></script>
